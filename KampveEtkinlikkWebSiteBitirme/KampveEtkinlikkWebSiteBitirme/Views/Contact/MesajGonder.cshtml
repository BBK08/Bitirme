@model KampveEtkinlikkWebSiteBitirme.Models.Entity.tblMesaj

<div class="contact-grids mt-5">
    <div class="row">
        <div class="col-lg-6 col-md-6 contact-left-form">
            @using (Html.BeginForm("MesajGonder", "Contact", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group contact-forms">
                    @Html.TextBoxFor(m => m.Gonderen, new { @class = "form-control", placeholder = "İsim" })
                    @Html.ValidationMessageFor(m => m.Gonderen)
                </div>
                <div class="form-group contact-forms">
                    @Html.TextBoxFor(m => m.Mail, new { @class = "form-control", placeholder = "Email", type = "email" })
                    @Html.ValidationMessageFor(m => m.Mail)
                </div>
                <div class="form-group contact-forms">
                    @Html.TextBoxFor(m => m.Konu, new { @class = "form-control", placeholder = "Konu Başlığı" })
                    @Html.ValidationMessageFor(m => m.Konu)
                </div>
                <div class="form-group contact-forms">
                    @Html.TextAreaFor(m => m.Mesaj, new { @class = "form-control", placeholder = "Mesajınızı yazınız" })
                    @Html.ValidationMessageFor(m => m.Mesaj)
                </div>
                <button type="submit" class="btn btn-contact">Gönder</button>
            }
        </div>
        <div class="col-lg-6 col-md-6 contact-right pl-lg-5">
            <h4>Bir fikriniz var mı? Bizimle paylaşın.</h4>
            <p class="mt-md-4 mt-2">
                Merhabalar Kamp ve Etkinlik rezervasyonu yapmak için en uygun yerdesiniz. 100 yılı aşkın süredir burada verdiğimiz hizmetten ziyade dünyanın her yerinde konaklama imkanı sunmaktayız. Bizim için önerileriniz çok önemli bizimle önerilerinizi paylaşınız lütfen!
            </p>
            <h5 class="mt-lg-5 mt-3">Çalışma Saatleri</h5>
            <p class="mt-3">Hafta içi : 9 ile 6 arası</p>
            <p>Cumartesi ve Pazar : 10 ile 4 arası</p>
        </div>
    </div>
</div>

